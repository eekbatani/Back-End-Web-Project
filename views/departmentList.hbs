<div class="row">
    <div class="col-md-12">
        <h1>{{title}}<a href="/departments/add" class="btn btn-success pull-right" style="margin-top:5px;">Add New Department</a><h1>
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class= "table-responsived">
            <thead>
                <tr>
                    <th>Department&nbsp;Number&emsp;&ensp;</th>
                    <th>Department&nbsp;Name</th>
                </tr>
            </thead>
            <tbody>
            {{#each data}}
            <tr class="bordered">
                <td>
                    <a href="/department/{{departmentId}}">{{departmentId}}</a>
                </td>

                <td>
                    <a href="/employees?department={{departmentId}}">{{departmentName}}</a>
                </td>
            </tr>
            {{else}}
            <tr>
                <td>No Data Available</td>
            </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
</div>
